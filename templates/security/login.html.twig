{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>SymBlog</h1>
            <span class="subheading">Un Blog créé avec Symfony 5 et Bootstrap 4</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-md-3">&nbsp;</div>
      <div class="col-md-6">
        <div class="bg-light py-3 px-3">
          <h1>Connectez-vous !</h1>


          <form method="post" action="{{ path('security_login') }}">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="text" required name="_username" id="email" class="form-control" placeholder="Adresse email...">
            </div>
            <div class="form-group">
              <label for="password">Mot de passe</label>
              <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de Passe..." required>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-success">Connexion !</button>
            </div>
          </form>
        </div>

      </div>
    </div>
  </div>
{% endblock %}
